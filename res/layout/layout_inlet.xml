<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	>
   	<RelativeLayout
   	    android:layout_width="fill_parent"
   	    android:layout_height="50dip"
   	    android:background="@drawable/title"
   	    >
   	    <ImageButton android:id="@+id/inlet_imagebutton"
                android:layout_alignParentLeft="true"
           	    android:layout_width="40dip"
           	    android:layout_height="40dip"
           	    android:layout_marginLeft="10dip" 
           	    android:layout_marginTop="5dip"     	    
           	    android:background="@drawable/ic_launcher"
           	    android:src="@drawable/imagebuttonbutton_a"
           	    android:onClick="imageButtonOnClick"
           	    />
   	    <TextView android:id="@+id/inlet_name"
   	        android:layout_width="wrap_content"
   	        android:layout_height="wrap_content"
   	 		android:layout_marginLeft="10dip"
   	        android:layout_toRightOf="@id/inlet_imagebutton"
   	        android:layout_centerVertical="true"
   	        android:textColor="#000000"
   	        android:textSize="15dip"
   	        android:gravity="center"
   	        />

   	    <ToggleButton
   	        android:id="@+id/inlet_toggleButton"
   	        android:layout_width="80dip"
   	        android:layout_height="30dip"
   	        android:layout_marginRight="10dip"
   	        android:layout_alignParentRight="true"
   	        android:layout_centerVertical="true"
   	        android:background="@drawable/inlet_togglebuttonbutton"
   	        android:textOn=""
   	        android:textOff=""
   	        />
   	     	       	    
   	</RelativeLayout>
    <LinearLayout 
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffffff"
        >
        <!-- inlet_fragment_a -->   
        <!--  <fragment android:id="@+id/fragment_a"
            android:name="com.phlofy.mygoldmark.Fragment_main"
            android:layout_width="match_parent"
            android:layout_height="150dip"
             />-->
        <FrameLayout android:id="@+id/fragment_a"
            android:layout_width="match_parent"
            android:layout_height="150dip"
            android:background="@drawable/yyy"
            />
       	<!-- inlet_fragment_b -->
       
   	    <FrameLayout android:id="@+id/fragment_b"
	        android:layout_width="match_parent"
	        android:layout_height="fill_parent"
	        android:background="@drawable/yy"
	        /> 
    </LinearLayout>
</LinearLayout>
